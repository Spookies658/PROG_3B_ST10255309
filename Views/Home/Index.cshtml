@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome to South Afica's Municipal Services</h1>
</div>

<style>
    body {
        background-image: url('https://e1.pxfuel.com/desktop-wallpaper/8/898/desktop-wallpaper-light-colour-plain-backgrounds-light-grey-plain.jpg');
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        height: 100vh;
        margin: 0;
        font-family: Arial, sans-serif;
    }

    .custom-button {
        width: 200px;
        height: 50px;
        font-size: 18px;
        margin-top: 10px;
    }
</style>

<div class="container">
    <img src="https://upload.wikimedia.org/wikipedia/commons/a/af/Flag_of_South_Africa.svg" alt="SA Flag" class="flag"/>
    <style>
        .flag {
            position: absolute;
            top: 70px;
            right: 10px;
            width: 100px; 
            height: auto;
        }
    </style>
</div>


<div class="d-flex flex-column align-items-center mt-5">
    <div class="mb-4 text-center">
        <h3>Report Issues</h3>
        <p>Help us improve our community by reporting local issues.</p>
        <button class="btn btn-outline-primary custom-button">Report Issues</button>
    </div>
    <div class="mb-4 text-center">
        <h3>Local Events</h3>
        <p>Stay updated with the latest events happening in your area.</p>
        <button class="btn btn-outline-success custom-button">Local Events</button>
    </div>
    <div class="mb-4 text-center">
        <h3>Status</h3>
        <p>Check the status of municipal services and updates.</p>
        <button class="btn btn-outline-info custom-button">Status</button>
    </div>
</div>


